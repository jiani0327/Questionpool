@page
@model Questionbank.Pages.loginModel
@{
}
<div class="form">
    <div class="form__box">
        <div class="form__left">
            <div class="form__padding"><img class="form__image" src="https://i.pinimg.com/originals/8b/44/51/8b4451665d6b2139e29f29b51ffb1829.png" /></div>
        </div>
        <div class="form__right">
            <div class="form__padding-right">
                <form enctype="multipart/form-data" method="post" action="users/Create">
                    <h1 class="form__title">User Registration</h1>
                    <input class="form__input" type="text" name="firstname" placeholder="First Name" required />
                    <input class="form__input" type="text" name="lastname" placeholder="Last Name" required />
                    <input class="form__input" type="text" name="username" placeholder="Username" required />
                    <input class="form__input" type="email" name="email" placeholder="Email" required />
                    <input class="form__input" type="password" name="password" placeholder="Password" required />
                    <input class="form__input" type="tel" name="phonenumber" placeholder="Phone Number" required />
                    <input class="form__input" type="text" name="schoolname" placeholder="School Name" required />
                    <input class="form__input" type="file" name="avatar" accept="image/*" required />
                    <input class="form__submit-btn" type="submit" value="Register" />
                </form>
                <p><a asp-page="users/Login">Already have an account? Login here</a></p>
            </div>
        </div>
    </div>
</div>
